<Page x:Class="PackageConsole.AddPackagePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PackageConsole"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddPackagePage">
    <Page.Resources>
        <!-- Custom Font -->
        <FontFamily x:Key="CustomFont">pack://application:,,,/YourFontFile.ttf#YourFontName</FontFamily>
        <!-- Global TextBlock Style -->
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource CustomFont}"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <!-- Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#ff5733"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="5,2"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff704d"/>
                                <Setter Property="BorderBrush" Value="#ff8566"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#ff8566"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid>
        <StackPanel Margin="20">
            <!-- Upload Installer Button -->
            <StackPanel Orientation="Horizontal" Margin="0,10,0,10">
                <Button Content="Upload Installer" Width="120" Height="30" Click="UploadInstallerButton_Click" />
            </StackPanel>
            <!-- Form Fields -->
            <StackPanel Orientation="Vertical" Margin="0,10,0,10" Width="688" HorizontalAlignment="Left">
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Request ID:" Width="150"/>
                    <TextBox x:Name="RequestIDTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="File Path:" Width="150" />
                    <TextBox x:Name="filePathTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="File Name:" Width="150"/>
                    <TextBox x:Name="fileNameTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="File Version:" Width="150"/>
                    <TextBox x:Name="fileVersionTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Product Name:" Width="150"/>
                    <TextBox x:Name="productNameTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Vendor:" Width="150"/>
                    <TextBox x:Name="vendorTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Product Code:" Width="150"/>
                    <TextBox x:Name="productCodeTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="Appkey ID Code:" Width="150"/>
                    <TextBox x:Name="appKeyIDTextBox" Width="300" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                    <TextBlock Text="DRM Build:" Width="150"/>
                    <TextBox x:Name="drmBuildTextBox" Width="300" />
                </StackPanel>
            </StackPanel>

            <!-- Upgrade Panel -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,10">
                <TextBlock Text="Upgrade Available:" VerticalAlignment="Center" Margin="0,0,10,0" Width="150" />
                <RadioButton x:Name="upgradeYesRadioButton" Content="Yes" GroupName="UpgradeOptions" Margin="10,0,10,0" Foreground="White"/>
                <RadioButton x:Name="upgradeNoRadioButton" Content="No" GroupName="UpgradeOptions" Margin="10,0,10,0" IsChecked="True" Foreground="White" />
                <Button x:Name="uploadINIButton" Content="Upload INI File" Width="150" Height="20" Margin="10,0,0,0" Visibility="Collapsed" Click="UploadINIFile_Click" />
            </StackPanel>

            <!-- Import status for Upgrade INI merge -->
            <TextBlock x:Name="txtUpgradeImportStatus"
                       Margin="0,5,0,0"
                       Foreground="#A0FFC107"
                       Visibility="Collapsed"
                       TextWrapping="Wrap"
                       />

            <!-- Reboot Required Panel -->
            <StackPanel x:Name="RebootPanel" Margin="0,0,0,0" HorizontalAlignment="Left" Width="743" Height="31" Orientation="Horizontal">
                <TextBlock Text="Reboot Required:" Margin="0,0,0,0" />
                <TextBlock Text="Install" Margin="90,0,0,0" />
                <TextBlock Text="Uninstall" Margin="90,0,0,0"  />
                <TextBlock Text="Always" Margin="90,0,0,0" />
                <TextBlock Text="No" Margin="90,0,0,0" />
            </StackPanel>

            <!-- Slider aligned with labels -->
            <Slider x:Name="rebootSlider" Minimum="0" Maximum="3" TickFrequency="1" IsSnapToTickEnabled="True" TickPlacement="BottomRight" Width="400" Margin="175,0,0,5" HorizontalAlignment="Left"/>
            <!-- Submit and Clear Buttons -->
            <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                <Button Content="Submit" Width="150" Height="30" Margin="0,0,10,0" Click="SubmitButton_Click" />
                <Button Content="Clear" Width="150" Height="30" Click="ClearButton_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
