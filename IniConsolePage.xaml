<Page x:Class="PackageConsole.IniConsolePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:PackageConsole"
      mc:Ignorable="d"
      d:DesignHeight="650" d:DesignWidth="900"
      Title="IniConsolePage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter" />

        <!-- Round icon button style for modern look -->
        <Style x:Key="RoundIconButton" TargetType="Button">
            <Setter Property="Width" Value="36"/>
            <Setter Property="Height" Value="36"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#4CAF50"/>
            <Setter Property="BorderBrush" Value="#4CAF50"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#43A047"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#388E3C"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Round icon variants for Undo/Redo (blue) and Delete (red) -->
        <Style x:Key="RoundIconButtonBlue" BasedOn="{StaticResource RoundIconButton}" TargetType="Button">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="BorderBrush" Value="#2196F3"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1E88E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#1976D2"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="RoundIconButtonRed" BasedOn="{StaticResource RoundIconButton}" TargetType="Button">
            <Setter Property="Background" Value="#E53935"/>
            <Setter Property="BorderBrush" Value="#E53935"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                CornerRadius="18"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#D32F2F"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#C62828"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>



    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🔹 ROW 0: Section and Button Bar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,0,0,10" HorizontalAlignment="Left">
            <Label Content="Section:" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <ComboBox x:Name="cmbSections"
                      Width="200"
                      ItemsSource="{Binding IniSectionList}"
                      DisplayMemberPath="Name"
                      SelectedItem="{Binding SelectedSection}"
                      Margin="0,0,20,0"/>


            <Button x:Name="btnUpdate" Width="100" Margin="0,0,10,0" Click="btnUpdate_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/update.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Update"/>
                </StackPanel>
            </Button>



            <!-- Add Section for INSTALL/UNINSTALL/UPGRADE/ARP with options -->
            <Button x:Name="btnAddSection" Width="140" Margin="0,0,10,0" Click="btnAddSection_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/add.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Add Section"/>
                </StackPanel>
                <Button.ContextMenu>
                    <ContextMenu x:Name="ctxAddSection">
                        <MenuItem Header="INSTALL" Click="AddSection_INSTALL_Click" />
                        <MenuItem Header="UNINSTALL" Click="AddSection_UNINSTALL_Click" />
                        <MenuItem Header="UPGRADE" Click="AddSection_UPGRADE_Click" />
                        <MenuItem Header="ARP" Click="AddSection_ARP_Click" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <!-- Configuration: Options for MACHINESPECIFIC/USERSPECIFIC/SERVICECONTROL/TAG -->
            <Button x:Name="btnConfigure" Width="140" Margin="0,0,10,0" Click="btnConfigure_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/update.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Configuration"/>
                </StackPanel>
                <Button.ContextMenu>
                    <ContextMenu x:Name="ctxConfigure">
                        <MenuItem Header="MACHINESPECIFIC" Click="Configure_MACHINESPECIFIC_Click" />
                        <MenuItem Header="USERSPECIFIC" Click="Configure_USERSPECIFIC_Click" />
                        <MenuItem Header="SERVICECONTROL" Click="Configure_SERVICECONTROL_Click" />
                        <MenuItem Header="TAG" Click="Configure_TAG_Click" />
                    </ContextMenu>
                </Button.ContextMenu>
            </Button>

            <Button x:Name="btnRemoveSection" Width="113" Margin="0,0,10,0" Click="btnRemoveSection_Click">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/remove.png" Width="16" Height="16" Margin="0,0,5,0"/>
                    <TextBlock Text="Remove Section"/>
                </StackPanel>
            </Button>

            <Button x:Name="btnUndo" Style="{StaticResource RoundIconButtonBlue}" Margin="0,0,10,0" Click="btnUndo_Click" ToolTip="Undo">
                <TextBlock Text="↶" FontSize="18" FontWeight="Bold"/>
            </Button>
            <Button x:Name="btnRedo" Style="{StaticResource RoundIconButtonBlue}" Margin="0,0,10,0" Click="btnRedo_Click" ToolTip="Redo">
                <TextBlock Text="↷" FontSize="18" FontWeight="Bold"/>
            </Button>
        </StackPanel>

        <!-- 🔸 ROW 1: Editor & INI Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- 🎛️ Key-Value Editor Panel -->
            <Border Grid.Column="0" BorderThickness="1" BorderBrush="#FFFBE9E9" CornerRadius="6" Background="White" Margin="0,0,50,0" VerticalAlignment="Top">
                <StackPanel Background="#1A1A2E">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <ItemsControl ItemsSource="{Binding SelectedSection.Entries}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition Width="30"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Key}" VerticalAlignment="Center"  Foreground="White" />
                                        <TextBox Text="{Binding Value, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Margin="5,0,0,0"
                                         ToolTip="{x:Static local:VariableHelper.TooltipText}"
                                         Loaded="AutoCompleteBox_Loaded" />

                                        <Button Grid.Column="2"
                                                Style="{StaticResource RoundIconButtonRed}"
                                                Width="28" Height="28"
                                                Margin="2,0,0,0"
                                                Tag="{Binding Key}"
                                                ToolTip="Delete key"
                                                Visibility="{Binding DataContext.DeleteModeEnabled, RelativeSource={RelativeSource AncestorType=Page}, Converter={StaticResource BoolToVisibilityConverter}}"
                                                Click="BtnDeleteKey_Click">
                                            <TextBlock Text="✖" FontSize="14" FontWeight="Bold"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                    </ScrollViewer>

                    <!-- [+ Key] inside editor panel, below the list -->
                    <StackPanel Orientation="Horizontal" Margin="10,8,10,0"
                                Visibility="{Binding ShowAddKeyButton, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Button x:Name="btnAddKeyInline" Style="{StaticResource RoundIconButton}"
                                Click="BtnAddKey_Click" ToolTip="Add key">
                            <TextBlock Text="+" FontSize="18" FontWeight="Bold"/>
                        </Button>
                    </StackPanel>

                    <!-- 🔘 Delete Mode Toggle -->
                    <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                        <TextBlock Text="Enable Delete Key Mode?" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0" FontWeight="Bold"/>
                        <RadioButton x:Name="radioDeleteYes" Content="Yes" Foreground="White" GroupName="DeleteToggle" Checked="DeleteToggle_Checked" Margin="0,0,10,0"/>

                        <RadioButton x:Name="radioDeleteNo" Content="No" Foreground="White" GroupName="DeleteToggle" Checked="DeleteToggle_Checked" IsChecked="True"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 📝 INI Content Panel (Right Side) -->
            <Border Grid.Column="1" BorderThickness="1" BorderBrush="#FFFBE9E9" CornerRadius="6" Background="White" Margin="0,0,0,0">
                <RichTextBox x:Name="richIniContent"
                             FontSize="12"
                             FontFamily="Consolas"
                             IsReadOnly="True"
                             Background="#1A1A2E"
                             Foreground="LightGray"
                             BorderThickness="0"
                             Padding="10"
                             HorizontalScrollBarVisibility="Auto"
                             VerticalScrollBarVisibility="Auto" />
            </Border>
        </Grid>
    </Grid>
</Page>
